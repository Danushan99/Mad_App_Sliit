<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bnow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicin.addMedicustomer"
    android:background="@drawable/newbg1">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="5sp"
                android:src="@drawable/medihead"
                android:contentDescription="@string/imagesInput" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/abeezee"
                android:paddingTop="20sp"
                android:text="@string/ordercfm"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/cusdetails"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:hint="@string/cdetails"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/custxt"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="276dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/page"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:hint="@string/page"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cusage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pnumber"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:hint="@string/pnumber"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/custxt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/paddress"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:hint="@string/paddress"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cusadd"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:hint="@string/pname"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cusname"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:hint="@string/qt"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cusqu"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cusadd"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="224dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cusage"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="328dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cusname"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="176dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cusqu"
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="384dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextbtn12"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="36dp"
        android:hint="@string/next"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:cornerRadius="15dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="36dp"
        android:hint="@android:string/cancel"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>