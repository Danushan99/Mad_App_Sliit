<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myBagFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="20sp"
        android:fontFamily="@font/abeezee"
        android:padding="10dp"
        android:textAllCaps="true"




        />
        <androidx.cardview.widget.CardView
            android:id="@+id/bagcard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp"
            android:layout_margin="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:background="@drawable/new11">

                <TextView
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:padding="25dp"
                    android:text="@string/bagtext"
                    android:textSize="30sp"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="@string/expendall"
                    android:textColor="@color/black" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bagcard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="5dp"
            android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="152dp"

            android:background="@drawable/roungy"


            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:padding="25dp"
                android:text="@string/bagtext2"
                android:textSize="30sp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="@string/expendall"
                android:textColor="@color/black" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bagcard4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="5dp"
            android:layout_margin="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="152dp"

                android:background="@drawable/new11"


                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:padding="25dp"
                    android:text="@string/bagtext3"
                    android:textSize="30sp"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="@string/expendall"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>


